<h1>Search Articles</h1>
<br />
<h3>Searching for: <%= @search_term %></h3>
	<% if @articles.length == 0 %>
<br />
<h2>Sorry, nothing found for this search term!</h2>
	<% end %>

<% @articles.each do |article| %>
  <div class ="article">
    <h3 style="text-align: center"><%= link_to article.title, article %></h3>
    <p style="padding-top: 20px; display: block; position: relative; float: left;">
    <%= image_tag article.image_url.to_s if article.image_url.present? %></p> 
    <p style="text-align:justify; text-indent:30px; padding-top: 30px; display: block; position:relative; left:10px;"><%= truncate_html article.content, length: 1000 %></p>
    <p style="display: block; position:relative; left:10px;"><%= link_to 'read more', article %></p>
  </div> 
<% end %>

<% if session[:login] == 1 %>
<p><%= link_to 'New article', new_article_path %></p>
<% end %>

