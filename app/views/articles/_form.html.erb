<%= form_for @article, :html => {:multipart => true} do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :style => 'width: 520px;'%>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :style => 'width: 520px;' 'height:300px;'%>
  </div>
  <div class="field">
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :remote_image_url, "or image URL" %><br />
    <%= f.text_field :remote_image_url %>
  </div>

  <div class="field">
    <%= f.label :category %><br />
    <%= f.select(:category, [['Travel'], ['Personal'], ['Unusual'],]) %>
   <!-- <%= f.text_field :category, :style => 'width: 520px;' %> -->
  </div>

 
  <div class="actions">
    <%= f.submit "Add a new article" %>
  </div>

<% end %>
