<div class="row">
  <div class="span4 offset3">
  	<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <div><% f.label :email %> <p>Your email</p>
  <%= f.email_field :email,:style => 'width: 330px;' %></div>
<br />
  <div><% f.label :password %><p>Password</p>
  <%= f.password_field :password,:style => 'width: 330px;' %></div>
<br />

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => 'navbar btn'%></div>
<% end %>

<%= render "devise/shared/links" %>
