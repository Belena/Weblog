<div class="row">
  <div class="span3 offset3">
    

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><% f.label :username %> <p>Please enter your name</p>
  <%= f.text_field :username, :style => 'width: 360px;''height:30px;'  %></div>
  <br />


  <div><% f.label :email %> <p>Your email</p>
  <%= f.email_field :email,:style => 'width: 360px;''height:30px;' %></div>
<br />
  <div><% f.label :password %><p>Password</p>
  <%= f.password_field :password,:style => 'width: 360px;''height:30px;' %></div>
<br />
  <div><% f.label :password_confirmation %><p>Confirm your password</p>
  <%= f.password_field :password_confirmation,:style => 'width: 360px;''height:30px;' %></div>
<br />
  <div><%= f.submit "Sign up", :class => 'navbar btn'%></div>
  
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
