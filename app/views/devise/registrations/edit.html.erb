<div class="row">
  <div class="span4 offset4">
<center><h2>Hello, <%= current_user.username %>! </h2>
<h3>want to update your data?</h3>
</center>
<div><%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <p><% f.label :username %><p>Please enter your name</p><br />
  <%= f.text_field :username, :style => 'width: 320px; height: 32px;'%></p>


  <div><% f.label :email %><p>Your email</p><br />
  <%= f.email_field :email, :style => 'width: 320px;' %></div>

  <div><% f.label :password %><p>Password</p> <i>(leave blank if you don't want to change it)</i><br />
  <%= f.password_field :password, :autocomplete => "off", :style => 'width: 320px;' %></div>

  <div><% f.label :password_confirmation %><br /><p>Confirm your password</p>
  <%= f.password_field :password_confirmation, :style => 'width: 320px;' %></div>

  <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  <%= f.password_field :current_password, :style => 'width: 320px;' %></div>

  <div><%= f.submit "Update", :class => 'navbar btn' %></div>
<% end %>
<br />

<h3>Unhappy? Want to cancel your account?</h3>

<p> <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

<%= link_to "Back", :back %> | <%= link_to "Home", home_path %>
</div>
</div>
</div>
