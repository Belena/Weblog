<%= form_for([@article, @article.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </div>
  <div class="field">
    <%= f.label :comment_id %><br />
    <%= f.text_area :comment_id %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.text_area :user_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
