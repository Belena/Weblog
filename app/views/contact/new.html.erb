<div class="row">
  <div class="span6 offset3">
    <h1>Send us your feedback:</h1><br />
    

<%= form_for @message, :url => contact_path do |form| %>
  <fieldset class="fields">
   
    <div class="field">
    <%= @message.name %>
   <p>Please, enter you name: </p>
      <%= form.text_field :name,:style => 'width: 360px;' 'height:30px;'%>
    </div>
    <br />
    <div class="field">
      <%= @message.email %>
      <p>Email</p>
      <%= form.text_field :email, :style => 'width: 360px;''height:30px;' %>
    </div>
    <br />
    <div class="field">
     <%= @message.subject %>
     <p>Subject: </p>
      <%= form.text_field :subject, :style => 'width: 360px;''height:30px;' %>
    </div>
    <br />
    
    <div class="field">
       <%= @message.body %>
       <p>Your Message:</p>
      <%= form.text_area :body, :style => 'width: 360px;' 'height:300px;' %>
    </div>
  </fieldset>
  
  <fieldset>
    <%= form.submit "Send", :class => 'navbar btn' %>
  </fieldset>
<% end %>

    <%= link_to 'Back to all Stories', articles_path %> |
    <%= link_to 'Home', home_path %>
  </div>
</div>



